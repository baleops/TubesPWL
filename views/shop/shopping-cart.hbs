{{# if products }}
<div class="row" style="height: 450px;">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <ul class="list-group">
      {{# each products }}
      <li class="list-group-item">
        <span class="badge">{{ this.qty }}</span>
        <strong>{{ this.item.title }}</strong>
        <span class="lable label-success">Rp. {{ this.price }}</span>
        <div class="btn-group">
          <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span
              class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Hapus 1 item</a></li>
            <li><a href="#">Hapus semua</a></li>
          </ul>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <strong>Total: Rp. {{ totalPrice }}</strong>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <a href="/checkout" class="btn btn-success">Pembayaran</a>
  </div>
</div>
{{ else }}
<div class="row" style="height:450px">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <h2>Tidak ada item dalam keranjang</h2>
    <a href="/" class="btn btn-primary" >Tambah item</a>
  </div>
</div>
{{/if}}
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>


{{#each products}}
<div class="row">
  {{#each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p>{{this.desc}}</p>
        <div class="clearfix">
          <div class="price pull-left">Rp. {{this.price}}</div>
          <a href="/add-to-cart/{{ this._id }}" class="btn btn-default pull-right" role="button">Tambah Ke Keranjang</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{/each}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <h1>Checkout</h1>
    <h4>Total Price: Rp. {{ totalPrice }}</h4>
    <form class="" action="/checkout" method="post" id="checkout-form">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="name">Nama</label>
            <input type="text" id="name" class="form-control" required>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="address">Alamat</label>
            <input type="text" id="address" class="form-control" required>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-name">No Telfon</label>
            <input type="Number" id="card-name" class="form-control" required>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-number">Nama Kartu Kredit</label>
            <input type="text" id="card-number" class="form-control" required>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-month">Nomor Kartu Kredit</label>
                <input type="text" id="card-expiry-month" class="form-control" required>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-year">Tahun Expiration</label>
                <input type="text" id="card-expiry-year" class="form-control" required>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-cvc">CVC</label>
            <input type="text" id="card-cvc" class="form-control" required>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-success">Beli Sekarang</button>
    </form>
  </div>
</div>